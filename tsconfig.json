{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "node16",
    "declaration": true,
    "rootDir": "src/",
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src", "src/*.json"],
  "exclude": ["node_modules"]
}
